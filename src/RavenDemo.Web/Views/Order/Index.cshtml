@model PagedList<Order>

@{
    ViewBag.Title = "Orders";
}
<h1>Orders</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>Customer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Order order in Model.List)
        {
            <tr onclick="location.href='@Url.Action("Details", "Order",new { id = order.Id })'">
                <td>@order.Id</td>  
                <td>@order.Created</td>
                <td>@order.CustomerId</td>
            </tr>
        }
    </tbody>

</table>